@model List<string>

<style>
    #active-btn:hover{
        color: #fff;
        background-color: #212529;
    }
</style>



<a asp-controller="Home"
   asp-action="Index"
   asp-route-categoryCustomers=""
   asp-route-PageNumber="1"
   class="btn btn-success">
    All
</a>

@foreach (var item in Model)
{
    <a 
        asp-controller="Home"
        asp-action="Index"
        asp-route-categoryCustomers="@item"
        asp-route-PageNumber="1"
        class="btn"
        id="active-btn"
    >
            @item
    </a>
}
